<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.ebookreadertekmira">
    <!-- Permissions -->
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!--Kumpulan Activity-->
        <activity android:name=".ReadBooks"
            android:parentActivityName=".Home"></activity>

        <activity android:name=".Settings"
            android:parentActivityName=".Home"></activity>

        <activity android:name=".About"
            android:parentActivityName=".Settings"></activity>

        <activity android:name=".DetailBooks"
        android:parentActivityName=".ReadBooks"></activity>

        <activity android:name=".Home"></activity>

        <activity android:name=".Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

    <!--Permission untuk menggunakan Internet dan Storage pada Android-->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <uses-permission android:name="android.permission.INTERNET" />

</manifest>